<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tela cadastro</title>

    <!-- JQuery -->
    <script src="js/jquery-2.2.1.js"></script>

    <!-- bootstrap - link cdn -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

    <!-- incluindo css -->
    <link href="css/style.css" rel="stylesheet">

    <!-- favicon -->
    <link rel="shortcut icon" href="images/favicon.ico" />
</head>
<body style="background-image: url(/images/teste.gif);">  
		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">

				<div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" 
                        data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					
					<img src="/images/naruto.png" />
				</div>

				<div id="navbar" class="navbar-collapse collapse">
					<ul class="nav navbar-nav navbar-right">
                        <li><a href="http://localhost:3000/">HOME</a></li>
					</ul>
				</div>
			</div>
		</nav>

	    <div class="container">

            <% if(validacao.length > 0) { %>
                <div class="row">
                    <div class="col-md-12">
                        <div class="alert alert-danger">
                            <strong>Atenção!</strong>
                            <ul>
                                <% for(var i = 0; i < validacao.length; i++){ %>
                                    <li><%= validacao[i].msg %></li>
                                <% } %>
                            </ul>
                        </div>
                    </div>
                </div>
            <% } %>
            
	    	<div class="row">
	    		<div class="col-md-12">
                    <form action="/cadastro/salvar" method="post">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="titulo" style="color: orange;">NOME:</label>
                                <input type="text" class="form-control" id="nome" name="nome">
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="pwd" style="color: orange;">AUTOR:</label>
                                <input type="text" class="form-control" id="autor" name="autor">
                            </div>
                        </div>
                        
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="pwd" style="color: orange;">LANÇAMENTO:</label>
                                <input type="text" class="form-control" id="lancamento" name="lancamento">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="pwd" style="color: orange;">CAPITULOS:</label>
                                <input type="text" class="form-control" id="capitulos" name="capitulos">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="pwd" style="color: orange;">GENERO:</label>
                                <input type="text" class="form-control" id="genero" name="genero">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="pwd" style="color: orange;">DESCRIÇÃO:</label>
                                <textarea class="form-control" id="descricao" name="descricao"></textarea>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <button type="submit" class="btn btn-default">Cadastrar</button>
                        </div>
                    </form>
		    	</div>
	    	</div>
	    </div>
	
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" 
            integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
</body>
</html>